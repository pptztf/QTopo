<div class="iposs-windows_panel">
    <div class="panel-heading">
        <span class="panel-title">添加分组</span>
        <button type="button" class="close" aria-hidden="true">
            &times;
        </button>
    </div>
    <div class="panel-body">
        <form>
            <div class="form-group">
                <label class="iposs-windows_label">名称</label>
                <div class="iposs-windows_label-for">
                    <input class="form-control" type="text" name="name" required="true">
                </div>
            </div>
            <div class="form-group">
                <label class="iposs-windows_label">大小</label>
                <div class="iposs-windows_label-for">
                    <select name="size_type" class="form-control">
                        <option value="0">自适应当前</option>
                        <option value="1">指定</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="iposs-windows_label">高度</label>
                <div class="iposs-windows_label-for">
                    <input class="form-control" type="number" name="height" required="true">
                </div>
            </div>
            <div class="form-group">
                <label class="iposs-windows_label">宽度</label>
                <div class="iposs-windows_label-for">
                    <input class="form-control" type="number" name="width" required="true">
                </div>
            </div>
            <button type="submit" class="qtopo-btn iposs-windows_submit-btn">确认</button>
        </form>
    </div>
</div>