<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>iposs_topo</title>
    <link href="./lib/font-awesome.min.css" rel="stylesheet"/>
    <script src="./lib/jquery.min.js"></script>
    <link href="./topo/topo.min.css" rel="stylesheet">
    <script src="./topo/topo.min.js"></script>
    <style>
        body{
            margin: 0;
            overflow: hidden;
            position: absolute;
            left:0;
            right:0;
            top:0;
            bottom:0;
        }
        #topo{
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
<div id="topo"></div>
<script>
    $(function () {
        $.getJSON("./topo/menu.json").done(function (data) {
            topo.init({
                dom: document.getElementById("topo"),
                background: '#06243e',
                menus: data,
                imagePath: "./images/",
                alarmColor:["255,0,0", "255, 102, 0", "255,204,0", "0,0,255"],
                url: {
                    index: "/ldims/liposs/newtopo/newTopoBase!getChildTopo.action?pid=1/guizhou/0",
                    alarm: "/ldims/liposs/newtopo/newTopoBase!refreshAlarm.action",                   
                    save: "/ldims/liposs/newtopo/newTopoBase!saveTopo.action",            
                    moved: "/ldims/liposs/newtopo/newTopoBase!modifyObjectsPosition.action",
                    go_down: "/ldims/liposs/newtopo/newTopoBase!getChildTopo.action", 
                    go_back: "/ldims/liposs/newtopo/newTopoBase!getParentTopo.action",    
                    go_to: "/ldims/liposs/newtopo/newTopoBase!findDevObjLocation.action", 
                    refresh: "/ldims/liposs/newtopo/newTopoBase!getSameTopo.action",  
                    add_device: "/ldims/liposs/newtopo/newTopoBase!addDevice.action",
                    add_segment: "/ldims/liposs/newtopo/newTopoBase!addNetSegment.action",    
                    add_link: "/ldims/liposs/newtopo/newTopoBase!addLink.action",
                    remove: "/ldims/liposs/newtopo/newTopoBase!deleteObject.action",
                    edit_node: "/ldims/liposs/newtopo/newTopoBase!modifyDeviceAttr.action",
                    search: "/ldims/liposs/newtopo/newTopoBase!getDeviceSeachInfo.action",
                    manage: "/ldims/liposs/newtopo/newTopoBase!mnagerDevice.action",      
                    cut_paste: "/ldims/liposs/newtopo/newTopoBase!pasteNetAutoCreateRelationDev.action",
                    copy: "/ldims/liposs/newtopo/newTopoBase!copyAndPaste.action",
                    get_path: "/ldims/liposs/newtopo/newTopoBase!getNETopoPath.action",
                    get_deviceIp: "/ldims/liposs/newtopo/newTopoRes!getDeviceIP.action",      
                    get_deviceMode: "/ldims/liposs/newtopo/newTopoRes!getModelList.action",   
                    get_resList: "/ldims/liposs/newtopo/newTopoRes!getResList.action",    
                    get_userGather: "/ldims/liposs/newtopo/newTopoRes!getUserGather.action",
                    get_vendorList: "/ldims/liposs/newtopo/newTopoRes!getVendorList.action",
                    get_deviceMode_withoutOs: "/ldims/liposs/newtopo/newTopoRes!getModelListWithoutOs.action",
                    get_linkCount:"/ldims/liposs/restopo/ResTopoBase!getPhyLinkCount.action"
                }
            });
        });
    })
</script>
</body>
</html>