.qtopo-rightMenu_Menu {
    position: absolute;
    display: none;
    background-color: rgba(6, 36, 62, 0.8);
    min-width: 120px;
    border-radius: 0;
    box-shadow: 2px 2px 2px #000000;
    z-index: 1000;
    padding: 5px 0;
    margin: 2px 0 0;
    font-size: 14px;
    text-align: left;
    list-style: none;
    border: 1px solid rgba(0, 0, 0, .15);
    background-clip: padding-box;
}

.qtopo-rightMenu_item {
    font-size: 13px;
    position: relative;
    cursor: pointer;
    height: 20px;
}

.qtopo-rightMenu_item-text {
    color: white;
    display: block;
    padding: 3px 20px;
    clear: both;
    font-weight: 400;
    line-height: 1.42857143;
    white-space: nowrap;
    text-decoration: none;
    background-color: transparent;
    outline: 0;
}

.qtopo-rightMenu_item-text:hover {
    color: white;
    text-decoration: none;
    background-color: #3d6cd6;
    box-shadow: 0 0 10px #3d6cd6;
}

.qtopo-rightMenu_subItem:after {
    content: "";
    border: 5px solid transparent;
    border-left-color: white;
    position: absolute;
    top: 7px;
    right: 10px;
}

.qtopo-rightMenu_subItem:hover>.qtopo-rightMenu_Menu {
    display: block;
    left: 95%;
    top: -5px;
}

.qtopo-rightMenu--up .qtopo-rightMenu_subItem:hover>.qtopo-rightMenu_Menu {
    display: block;
    top: auto;
    bottom:-5px;
}

.qtopo-rightMenu--left .qtopo-rightMenu_subItem:hover>.qtopo-rightMenu_Menu {
    display: block;
    right: 95%;
    left: auto;
}

.qtopo-rightMenu--left-up .qtopo-rightMenu_subItem:hover>.qtopo-rightMenu_Menu {
    display: block;
    right: 95%;
    bottom: -5px;
    left: auto;
    top: auto;
}